@model ConsumeApi.Models.Livros
@{
    Layout = "_Layout"; ViewBag.Title = "Update a LIVROS";
}

<h2>Update a LIVROS <a asp-action="Update" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input class="form-control" asp-for="Titulo" />
    </div>
    <div class="form-group">
        <label asp-for="Ano"></label>
        <input class="form-control" asp-for="Ano" />
    </div>
    <div class="form-group">
        <label asp-for="Isbn"></label>
        <input class="form-control" asp-for="Isbn" />
    </div>
    <div class="form-group">
        <label asp-for="Autor"></label>
        <input class="form-control" asp-for="Autor" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
@if (ViewBag.Result == "Success") { <h1>Foi Parabens, pela sua atualização</h1>
}

